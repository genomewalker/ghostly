# ╔═══════════════════════════════════════════════════════════════════════════╗
# ║                           GHOSTTY CONFIGURATION                           ║
# ║                  "Flow State Terminal for Remote Work"                    ║
# ╚═══════════════════════════════════════════════════════════════════════════╝
#
# Optimized for: SSH sessions, Claude Code, bash, small fonts, no tmux
#
# Installation: Run ./install.sh or manually copy to ~/.config/ghostty/config


# ═══════════════════════════════════════════════════════════════════════════
# THEME & COLORS
# ═══════════════════════════════════════════════════════════════════════════

theme = Catppuccin Mocha

# Alternative themes to try:
# theme = Tokyo Night
# theme = Gruvbox Material Dark Hard
# theme = Nord
# theme = Dracula


# ═══════════════════════════════════════════════════════════════════════════
# FONT - Small & Crisp for Dense Work
# ═══════════════════════════════════════════════════════════════════════════

font-family = JetBrainsMono Nerd Font
font-family = JetBrains Mono
font-family = Fira Code
font-family = SF Mono
font-family = Menlo

font-size = 11
font-thicken = true
font-synthetic-style = bold,italic,bold-italic

# Programming ligatures
font-feature = calt
font-feature = liga


# ═══════════════════════════════════════════════════════════════════════════
# WINDOW & AESTHETICS
# ═══════════════════════════════════════════════════════════════════════════

background-opacity = 0.88
background-blur-radius = 20

macos-titlebar-style = hidden

window-height = 40
window-width = 140

window-padding-x = 18
window-padding-y = 14
window-padding-balance = true
window-decoration = none
window-vsync = true
resize-overlay = never


# ═══════════════════════════════════════════════════════════════════════════
# CURSOR
# ═══════════════════════════════════════════════════════════════════════════

cursor-style = bar
cursor-style-blink = true


# ═══════════════════════════════════════════════════════════════════════════
# LINE SPACING - Essential for Small Fonts
# ═══════════════════════════════════════════════════════════════════════════

adjust-cell-height = 25%


# ═══════════════════════════════════════════════════════════════════════════
# SCROLLBACK - Large for Long SSH Sessions
# ═══════════════════════════════════════════════════════════════════════════

scrollback-limit = 100000
mouse-scroll-multiplier = 1.5


# ═══════════════════════════════════════════════════════════════════════════
# CLIPBOARD
# ═══════════════════════════════════════════════════════════════════════════

copy-on-select = clipboard


# ═══════════════════════════════════════════════════════════════════════════
# SHELL INTEGRATION - Bash + SSH Optimized
# ═══════════════════════════════════════════════════════════════════════════

shell-integration = detect
shell-integration-features = cursor,sudo,title

# SSH integration features (opt-in for compatibility)
# These help with remote sessions - uses xterm-256color fallback
shell-integration-features = ssh-env,ssh-terminfo


# ═══════════════════════════════════════════════════════════════════════════
# TERM COMPATIBILITY (Important for SSH)
# ═══════════════════════════════════════════════════════════════════════════

# Force xterm-256color for better remote compatibility
# Uncomment if you have issues on remote hosts:
# term = xterm-256color


# ═══════════════════════════════════════════════════════════════════════════
# KEYBINDINGS - SSH Workflow Optimized
# ═══════════════════════════════════════════════════════════════════════════

# ─── Essentials ───
keybind = ctrl+shift+c=copy_to_clipboard
keybind = ctrl+shift+v=paste_from_clipboard
keybind = ctrl+shift+comma=reload_config
keybind = ctrl+l=clear_screen

# ─── Font Size (crucial at small default) ───
keybind = ctrl+equal=increase_font_size:1
keybind = ctrl+minus=decrease_font_size:1
keybind = ctrl+0=reset_font_size

# ─── Tabs (Your tmux replacement!) ───
keybind = ctrl+shift+t=new_tab
keybind = ctrl+shift+w=close_surface
keybind = ctrl+tab=next_tab
keybind = ctrl+shift+tab=previous_tab
keybind = ctrl+1=goto_tab:1
keybind = ctrl+2=goto_tab:2
keybind = ctrl+3=goto_tab:3
keybind = ctrl+4=goto_tab:4
keybind = ctrl+5=goto_tab:5
keybind = ctrl+6=goto_tab:6
keybind = ctrl+7=goto_tab:7
keybind = ctrl+8=goto_tab:8
keybind = ctrl+9=goto_tab:9

# ─── Splits (Native - No tmux needed!) ───
keybind = alt+s>v=new_split:right
keybind = alt+s>h=new_split:down
keybind = alt+s>z=toggle_split_zoom
keybind = alt+s>x=close_surface
keybind = alt+s>r=equalize_splits

# ─── Split Navigation ───
keybind = alt+left=goto_split:left
keybind = alt+right=goto_split:right
keybind = alt+up=goto_split:top
keybind = alt+down=goto_split:bottom

# ─── Split Resize ───
keybind = alt+shift+left=resize_split:left,20
keybind = alt+shift+right=resize_split:right,20
keybind = alt+shift+up=resize_split:up,20
keybind = alt+shift+down=resize_split:down,20

# ─── Prompt Navigation (works with bash integration) ───
keybind = ctrl+shift+up=jump_to_prompt:-1
keybind = ctrl+shift+down=jump_to_prompt:1

# ─── Quick Terminal (dropdown) ───
keybind = ctrl+grave=toggle_quick_terminal

# ─── Scrollback Search ───
keybind = ctrl+shift+f=open_scrollback_search

# ─── Window ───
keybind = ctrl+shift+n=new_window
keybind = ctrl+shift+enter=toggle_fullscreen


# ═══════════════════════════════════════════════════════════════════════════
# QUICK TERMINAL
# ═══════════════════════════════════════════════════════════════════════════

quick-terminal-position = top
quick-terminal-screen = main
quick-terminal-animation-duration = 0.12


# ═══════════════════════════════════════════════════════════════════════════
# LINKS
# ═══════════════════════════════════════════════════════════════════════════

link-url = true


# ═══════════════════════════════════════════════════════════════════════════
# BELL - Silent
# ═══════════════════════════════════════════════════════════════════════════

audible-bell = false


# ═══════════════════════════════════════════════════════════════════════════
# CONFIRM ON CLOSE (Safety for SSH sessions)
# ═══════════════════════════════════════════════════════════════════════════

confirm-close-surface = true


# ═══════════════════════════════════════════════════════════════════════════
# END OF CONFIG
# ═══════════════════════════════════════════════════════════════════════════
